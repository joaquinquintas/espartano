<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@color/fondo_negro_mp"    android:orientation="vertical" >    <LinearLayout        android:id="@+id/contPaletas"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_alignParentLeft="true"        android:layout_alignParentTop="true"        android:background="@color/fondo_intro"        android:gravity="top" >        <TextView            android:id="@+id/txtTitulo"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_margin="20dp"            android:gravity="center"            android:text="@string/my_selection"            android:textSize="22sp" />    </LinearLayout>    <ListView        android:id="@+id/listaFavoritos"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_centerHorizontal="true"        android:layout_centerVertical="true"         android:layout_below="@+id/contPaletas"        android:layout_above="@+id/menuNavegacion">    </ListView>    <LinearLayout        android:id="@+id/linearLayout1"        android:layout_width="fill_parent"        android:layout_height="wrap_content"        android:layout_alignParentBottom="true"        android:layout_alignParentLeft="true"        android:background="@color/fondo_negro_mp"        android:gravity="bottom"        android:orientation="horizontal" >        <ImageView            android:id="@+id/imageView6"            android:layout_width="0dip"            android:layout_height="wrap_content"            android:layout_weight="1"            android:layout_marginBottom="10dp"            android:layout_marginTop="10dp"            android:onClick="irMenuPrincipal"            android:contentDescription="@string/ic_collections"            android:src="@drawable/collections" />        <ImageView            android:id="@+id/imageView9"            android:layout_width="0dip"            android:layout_height="wrap_content"            android:layout_weight="1"            android:layout_marginBottom="10dp"            android:layout_marginTop="10dp"            android:contentDescription="@string/ic_collections"            android:onClick="irColorFan"            android:src="@drawable/colorfan" />        <ImageView            android:id="@+id/imageView7"            android:layout_width="0dip"            android:layout_height="wrap_content"            android:layout_weight="1"            android:layout_marginBottom="10dp"            android:layout_marginTop="10dp"            android:onClick="irMisColecciones"            android:contentDescription="@string/ic_collections"            android:src="@drawable/myselectionclick" />        <ImageView            android:id="@+id/imageView8"            android:layout_width="0dip"            android:layout_height="wrap_content"            android:layout_weight="1"            android:layout_marginBottom="10dp"            android:layout_marginTop="10dp"            android:onClick="mostrarContacto"            android:contentDescription="@string/ic_collections"            android:src="@drawable/contact" />    </LinearLayout>    <View        android:layout_width="match_parent"        android:layout_height="1dp"        android:layout_above="@+id/linearLayout1"        android:layout_alignParentLeft="true"        android:background="#4D4D4D" /></RelativeLayout>