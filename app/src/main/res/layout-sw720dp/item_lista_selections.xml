<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeGeneral"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo_negro_mp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:alpha="0.7"
        android:background="@color/blanco2"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/icColorFan"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:contentDescription="@string/item_lista_textura"
            android:src="@drawable/fan" />

        <ImageView
            android:id="@+id/icChat"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:contentDescription="@string/item_lista_textura"
            android:src="@drawable/chat" />

        <ImageView
            android:id="@+id/icMail"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:contentDescription="@string/item_lista_textura"
            android:src="@drawable/mail" />

        <ImageView
            android:id="@+id/icEliminarSel"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="50dp"
            android:layout_weight="1"
            android:contentDescription="@string/item_lista_textura"
            android:src="@drawable/cruz" />
    </LinearLayout>

</RelativeLayout>